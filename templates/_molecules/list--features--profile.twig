{% import '_macros/global' as render %}

{# Portrait List #}
{# mb-xl   pt-10 sm:mb-10  #}
<div class="list--portraits   mx-auto max-w-2xl    px-4 {{render.spacing(content)}}  ">
	<div class="sm:flex sm:flex-wrap sm:justify-between ">

	{% for block in content.profile %}

		<div class="portrait__group   mt-0 w-full block text-center max-w-xs m-auto mb-18 md:w-1/3 md:w-1/3 md:mb-0 sm:px-2 {{render.transitions(content)}}">

			
			{% if block.image.count() %}

				<div class="mb-6 w-2/3 sm:w-4/5 m-auto">
					<div class="img  {{render.ratio(block)}} {{render.radius(block)}}">
						{{render.single_image(block.image.one())}}	
					</div>
				</div>

			{% endif %}

			<h4 class="text-blue text-2md mb-2">
				
				{% if block.firstName %}{{block.firstName}}{% endif %}
				{% if block.lastName %}{{block.lastName}}{% endif %}
			</h4>

			<div class="text-base text-grey-dark m-auto w-full leading-normal">
				{% if block.phone|length %}
					<a href="tel:{{block.phone}}" class="no-underline text-grey-dark hover:text-blue block">{{block.phone}}</a>
				{% endif %}

				{% if block.email|length %}
					<a href="mailto:{{block.email}}" class="no-underline text-grey-dark hover:text-blue block">{{block.email}}</a>
				{% endif %}
				
			</div> 

		</div>

	{% endfor %}
	</div>
</div>
