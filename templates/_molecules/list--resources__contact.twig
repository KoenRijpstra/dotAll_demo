{% import '_macros/global' as render %}

{# Contact Item #}
<div class="list-contacts__contact border-b border-grey-lightest {% if card.image.count() %}pt-8{% endif %} pb-8  sm:flex">

	{% if card.image.count() %}
	<div class="contact__img sm:w-1/3 w-2/3 m-auto sm:border-r border-grey-lightest">
		<div class="max-w-xs m-auto sm:w-full mb-6 px-6 md:px-0 md:pr-8">
			<figure class="img {{render.ratio(card)}} {{render.radius(card)}}">
				{{render.single_image(card.image.one())}}	
			</figure>

		</div>
	</div>
	{% endif %}
	
	<div class="contact__info   text-center sm:text-left sm:w-2/3 px-6 md:pl-8 mt-8 md:mt-12">
		<h4 class="text-blue text-2md mb-2">
			{% if card.firstName %}{{card.firstName}}{% endif %}
			{% if card.lastName %}{{card.lastName}}{% endif %}
		</h4>

		<div class="text-base text-grey-dark m-auto w-full leading-normal">
			{% if card.phone|length %}
				<a href="tel:{{card.phone}}" class="no-underline text-grey-dark hover:text-blue block">{{card.phone}}</a>
			{% endif %}

			{% if card.email|length %}
				<a href="mailto:{{card.email}}" class="no-underline text-grey-dark hover:text-blue block">{{card.email}}</a>
			{% endif %}
			
		</div> 
	</div>

</div>